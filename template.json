{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Linux_64",
    "iso_url": "http://releases.nixos.org/nixos/13.10/nixos-13.10.35497.60b0467/nixos-minimal-13.10.35497.60b0467-x86_64-linux.iso",
    "iso_checksum": "db3b34cd4cf2030b1a425cd6af6a9a09",
    "iso_checksum_type": "md5",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
    "boot_command": [
      "<enter>",
      "<wait10>",
      "<wait10>",
      "<wait10>",
      "root",
      "<enter>",
      "fdisk /dev/sda",
      "<enter>",
      "n",
      "<wait>",
      "<enter>",
      "<wait>",
      "<enter>",
      "<wait>",
      "<enter>",
      "<wait>",
      "<enter>",
      "<wait>",
      "<enter>",
      "<wait>",
      "a",
      "<wait>",
      "<enter>",
      "<wait>",
      "1",
      "<wait>",
      "<enter>",
      "<wait>",
      "w",
      "<wait>",
      "<enter>",
      "<wait>",
      "mkfs.ext4 -j -L nixos /dev/sda1",
      "<enter>",
      "<wait5>",
      "mount LABEL=nixos /mnt",
      "<enter>",
      "<wait>",
      "mkdir -p /mnt/etc/nixos",
      "<enter>",
      "curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/configuration.nix > /mnt/etc/nixos/configuration.nix",
      "<enter>",
      "<wait5>",
      "nixos-install &&",
      "<enter>",
      "reboot",
      "<enter>"
    ],
    "boot_wait": "5s",
    "disk_size": 20000,
    "http_directory": "http",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }]
}
